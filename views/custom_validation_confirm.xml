<odoo>
    <record id="view_custom_validation_confirm" model="ir.ui.view">
        <field name="name">custom.validation.confirm.form</field>
        <field name="model">custom.validation.confirm</field>
        <field name="arch" type="xml">
            <form string="Confirmar Validación" wide="true">
            
                    <h4>Se encontraron discrepancias: </h4>
                    <field name="errors" nolabel="1" readonly="1"/>
                    <p>¿Desea continuar a pesar de las diferencias?</p>
         
                <footer>
                    <button name="action_cancel" string="Cancelar" type="object" class="btn-secondary"/>
                    <button name="action_confirm" string="Continuar" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
